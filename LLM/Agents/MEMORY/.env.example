# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
NODE_ENV=development

# Session Management Configuration
# Duration of a session in seconds (default: 1800 = 30 minutes)
SESSION_DURATION=1800

# Maximum number of conversations per session (default: 20)
MAX_CONVERSATIONS_PER_SESSION=20

# Session cleanup interval in milliseconds (default: 300000 = 5 minutes)
CLEANUP_INTERVAL=300000

# Session inactivity timeout in seconds (default: 900 = 15 minutes)
INACTIVITY_TIMEOUT=900

# Express Server Configuration
PORT=3000

# Memory Management
# Enable or disable Redis (fallback to in-memory if disabled)
USE_REDIS=true

# Logging Level
LOG_LEVEL=info
