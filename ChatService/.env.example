# Environment configuration for local development
# Copy this file to .env and modify as needed

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=chatservice
MONGODB_COLLECTION=messages

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ISSUER=chatservice
JWT_EXPIRY_HOURS=24

# Rate Limiting Configuration
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=10

# Production MongoDB Atlas example (uncomment and modify)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatservice?retryWrites=true&w=majority